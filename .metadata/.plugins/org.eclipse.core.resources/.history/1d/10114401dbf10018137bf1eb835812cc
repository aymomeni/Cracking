package chapter1.Tests;

import static org.junit.Assert.*;

import org.junit.Test;

import chapter1.RotateMatrix;

public class RotateMatrixTests {

	@Test
	public void test1() {
		RotateMatrix rM = new RotateMatrix();
		
		int[][] matrix = new int[][]{
			{1, 2, 3},
			{4, 5, 6},
			{7, 8, 9}
		};
		
		
		int[][] b = rM.rotate(matrix);
		
		System.out.println(b.toString());
		assertEquals(7, b[0][0]);
		assertEquals(1, b[0][b.length-1]);
		assertEquals(3, b[b.length-1][b.length-1]);
		assertEquals(9, b[b.length-1][0]);
	}

}
